{
    "name": "McDonald's",
    "description": "麦当劳小程序API接口.",
    "keywords": ["McDonald", "小程序"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.6.4",
        "laravel/framework": "5.4.*",
        "laravel/tinker": "~1.0",
        "tymon/jwt-auth": "0.5.*",
        "ixudra/curl": "6.*",
        "predis/predis": "1.0.*",
        "simplesoftwareio/simple-qrcode": "~1"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.7",
        "squizlabs/php_codesniffer": "^2.8"
    },
    "autoload": {
        "classmap": [
            "database",
            "app/Libs/SmsClient.php",
            "app/Libs/WeChat/WxSmallClient.php",
            "app/Libs/WeBankClient.php",
            "app/Libs/qCould/CosClient.php",
            "app/Libs/WeChat/WxSmsClient.php"
        ],
         "files":[
            "app/Libs/helpers.php"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "repositories": {
        "packagist": {
            "type": "composer",
            "url": "https://packagist.phpcomposer.com"
        }
    }
}
